<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentStart="true"
    android:background="#FFFF"
    tools:context="com.example.toto.testapp.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_logo" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="13sp"
            android:gravity="center_horizontal"
            android:text="Please login to your accont" />

        <EditText
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/login_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_view"
            android:hint="User ID"
            android:singleLine="true"
            android:padding="13dp"
            android:inputType="textPersonName"
            android:textSize="15sp" />

        <EditText
            android:password="true"
            android:singleLine="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_userid"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_view"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="13dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textSize="14sp"
            android:text="Forget password?" />
    </LinearLayout>

    <Button
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:id="@+id/login_login"
        android:background="#57c2b0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:text="Log In" />
</RelativeLayout>
