<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.toto.testapp.SignSucessActivity">
    <LinearLayout
        android:padding="7dp"
        android:background="#FFFF"
        android:orientation="horizontal"

        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >
        <ImageButton
            android:id="@+id/back_button"
            android:paddingLeft="10dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_back"/>
        <TextView

            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signed  Success "/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/view0"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#57c2b0"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight=".01"
            android:background="@drawable/ic_check_24px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight=".99"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signin_sucess_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOHAMED NASSER"
                android:textColor="#ffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/signin_sucess_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGNED AT 7:40 AM"
                android:textColor="#ffff"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/view0"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:background="#ffff"
            android:stretchColumns="4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="20dp"
                    android:text="Name"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/signin_sucess_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_gravity="right"
                    android:paddingRight="20dp"
                    android:text="Mohamed Nasser"
                    android:textSize="17sp" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="17dp"
                android:background="#57c2b0" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="20dp"
                    android:text="Job"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/signin_sucess_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_gravity="right"
                    android:paddingRight="20dp"
                    android:text="UI designer"
                    android:textSize="17sp" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="17dp"
                android:background="#57c2b0" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="20dp"
                    android:text="Phone"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/signin_sucess_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_gravity="right"
                    android:paddingRight="20dp"
                    android:text="01010101010"
                    android:textSize="17sp" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="17dp"
                android:background="#57c2b0" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:paddingLeft="20dp"
                    android:text="Email"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/signin_sucess_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_gravity="right"
                    android:paddingRight="20dp"
                    android:text="Mohamed.Nasser@gmail.com"
                    android:textSize="17sp" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="17dp"
                android:background="#57c2b0" />

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:textSize="15sp"
                android:text="YOU SIGNED AT" />

            <TextView
                android:id="@+id/signin_sucess_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="7:40 AM" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/signin_sucess_button_signout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:background="#526067"
        android:text="Done"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</RelativeLayout>
